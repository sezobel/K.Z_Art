<div class="row">
<div class="col-md-14">
<table class="table table-bordered table-hover">
<tr class="active">
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Editing Options</th>
  </tr>
  </div>


<div class="col-md-6">
  <% @listings.each do |listing| %>
  <tr class="active">

    <td class="center"><%= image_tag listing.image.url(:thumb) %></td>
    <td class="center"><%= listing.name %></td>
    <td class="center"><%= listing.description %></td>
    <td class="center"><%= number_to_currency(listing.price) %></td>
    <td>

    <div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Edit <span class="caret"></span>
  </button>

  <ul class="dropdown-menu">
   <li class="center"> <%= link_to "View", listing, class: "btn btn-link" %> </li>
      <li class="center"><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %> </li>
      <li class="center"><%= link_to "Delete", listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %> </li>
    </td>
  </ul>
</div>

  </tr>
  <%end%>
  </div>
</table>


<% if user_signed_in? %> 

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link",  class: "btn btn-primary" %>

<%end%>
